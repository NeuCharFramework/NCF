<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Version>0.3</Version>
		<AssemblyName>Senparc.Xncf.Installer</AssemblyName>
		<RootNamespace>Senparc.Xncf.Installer</RootNamespace>
		<GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>

		<GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
		<Description>NCF 初始化安装模块，安装完成后可卸载或移除</Description>
		<Copyright>Senparc</Copyright>
		<PackageTags>Senparc,NeuCharFramework,NCF,Senparc.Xncf.Installer</PackageTags>
		<Authors>Senparc</Authors>
		<Owners>Senparc</Owners>
		<!-- <PackageLicenseUrl>https://github.com/NeuCharFramework/NcfPackageSources/blob/master/LICENSE</PackageLicenseUrl> -->
		<Title>NCF 安装程序</Title>
		<!--<ProjectUrl> https://github.com/NeuCharFramework/NCF</ProjectUrl>
    <PackageProjectUrl>https://github.com/NeuCharFramework/NcfPackageSources</PackageProjectUrl>
    <PackageIconUrl>https://sdk.weixin.senparc.com/Images/logo-square-ncf.jpg</PackageIconUrl>-->
		<PackageReleaseNotes>
			v0.3 创世
		</PackageReleaseNotes>
		<RepositoryUrl>https://github.com/NeuCharFramework/NcfPackageSources</RepositoryUrl>
		<Configurations>Debug;Release;Test;TemplateRelease;Debug-Dapr;NcfDebugForPromptRange</Configurations>
		<DockerComposeProjectPath>..\docker-compose.dcproj</DockerComposeProjectPath>
		<UserSecretsId>95b039f7-327c-4e1e-a03f-eab8bbe5378f</UserSecretsId>
		<DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
		<OutputPath>..\..\..\BuildOutPut</OutputPath>
	</PropertyGroup>
	<ItemGroup>
		<!--<FrameworkReference Include="Microsoft.AspNetCore.App" />-->

		<PackageReference Include="Dapr.AspNetCore" Version="1.12.0" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="8.0.0" />
		<!--<PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.19.5" />-->
		<PackageReference Include="Senparc.Ncf.XncfBase" Version="0.18.1-preview1" />
		<PackageReference Include="Senparc.Ncf.AreaBase" Version="0.16.1-preview1" />
		<ProjectReference Include="..\Senparc.Areas.Admin\Senparc.Areas.Admin.csproj" />
		<ProjectReference Include="..\Senparc.Xncf.Installer.Interface\Senparc.Xncf.Installer.Interface.csproj" />
		<!--为了兼容部分数据库迁移文件仍然有依赖的情况-->
		<PackageReference Include="Senparc.Ncf.DatabasePlant" Version="0.17.1-preview1" />

		<PackageReference Include="Senparc.Xncf.AreasBase" Version="0.7.1-preview1" />
		<PackageReference Include="Senparc.Xncf.Menu" Version="0.8.1-preview1" />
		<PackageReference Include="Senparc.Xncf.Swagger" Version="0.12.1-preview1" />
		<PackageReference Include="Senparc.Xncf.SystemCore" Version="0.8.1-preview1" />
		<PackageReference Include="Senparc.Xncf.SystemManager" Version="0.8.1-preview1" />
		<PackageReference Include="Senparc.Xncf.SystemPermission" Version="0.8.1-preview1" />
		<PackageReference Include="Senparc.Xncf.Tenant" Version="0.9.1-preview1" />
		<PackageReference Include="Senparc.Xncf.Terminal" Version="0.17.1-preview1" />
		<PackageReference Include="Senparc.Xncf.XncfBuilder" Version="0.26.1-beta1" />
		<PackageReference Include="Senparc.Xncf.XncfModuleManager" Version="0.9.1-preview1" />
		<None Include="App_Data\SenparcTraceLog\*" />
	</ItemGroup>
	<ItemGroup>
	  <Content Remove="appsettings.json" />
	  <Content Remove="App_Data\Database\SenparcConfig.config" />
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Include="wwwroot\**\*" />
		<!--<Compile Remove="Domain\Dto\**" />
		<Compile Remove="Domain\Models\DatabaseModel\Mapping\**" />
		<Content Remove="Domain\Dto\**" />
		<Content Remove="Domain\Models\DatabaseModel\Mapping\**" />
		<EmbeddedResource Remove="Domain\Dto\**" />
		<EmbeddedResource Remove="Domain\Models\DatabaseModel\Mapping\**" />
		<None Remove="Domain\Dto\**" />
		<None Remove="Domain\Models\DatabaseModel\Mapping\**" />-->
		<PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="8.0.0" />
	</ItemGroup>
	<ItemGroup>
		<!--<PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />-->
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.0">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<!-- 为解决 VS 2019 v16.8 的一个bug，需要添加下方引用 --><!--
		<PackageReference Include="Microsoft.NET.Sdk.Razor" Version="3.1.10" />-->
	</ItemGroup>
	<ItemGroup>
	  <None Include="App_Data\Database\SenparcConfig.config" />
	</ItemGroup>
	<ItemGroup>
	  <EmbeddedResource Update="wwwroot\css\Installer\Pages\index.css">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Update="wwwroot\js\Installer\Pages\index.js">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	</ItemGroup>
</Project>
